<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.fragment.FormBuatPengumumanFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_icon"
            android:backgroundTint="@color/white"
            android:layout_alignParentStart="true"
            android:id="@+id/form_buat_pengumuman_button_back"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buat Pengumuman"
            android:textSize="16sp"
            android:textColor="@color/primary"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button_not_enabled_layout"
            android:textColor="@color/white"
            android:text="Post"
            android:id="@+id/form_buat_pengumuman_button_post"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="3dp"/>
    </RelativeLayout>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deskripsi pengumuman"
        android:layout_marginHorizontal="20dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="20dp">
        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapSentences|textMultiLine"
            android:maxLength="500"
            android:id="@+id/form_buat_pengumuman_deskpripsi"
            android:layout_alignParentTop="true"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/500"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/form_buat_pengumuman_deskpripsi"
            android:id="@+id/form_buat_pengumuman_word_count"/>
    </RelativeLayout>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload File"
        android:textColor="@color/primary"
        android:layout_marginStart="20dp"
        android:clickable="true"
        android:id="@+id/form_buat_pengumuman_button_upload_file"
        android:focusable="true"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:id="@+id/form_buat_pengumuman_nama_file"/>
</LinearLayout>