<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.RuangObrolanFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/ruang_obrolan_action_bar"
        android:layout_alignParentTop="true">
        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_icon"
            android:backgroundTint="@color/white"
            android:layout_alignParentStart="true"
            android:id="@+id/ruang_obrolan_button_back"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/standard_user_photo"
            android:layout_toEndOf="@id/ruang_obrolan_button_back"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="10dp"
            android:id="@+id/ruang_obrolan_foto_user"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/ruang_obrolan_nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/ruang_obrolan_search"
            android:layout_toEndOf="@id/ruang_obrolan_foto_user"
            android:text="@string/contoh_nama"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"/>
        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/search_icon"
            android:background="@color/white"
            android:id="@+id/ruang_obrolan_search"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="3dp"/>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ruang_obrolan_rv_chat"
        android:layout_below="@id/ruang_obrolan_action_bar"
        android:layout_above="@id/ruang_obrolan_chat_message_tool_container"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/ruang_obrolan_chat_message_tool_container">
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/ruang_obrolan_input_msg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/message_here"
            android:layout_weight="1"
            android:layout_marginHorizontal="10dp"
            android:inputType="textMultiLine"
            android:maxLines="2"/>
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ruang_obrolan_button_send"
            android:src="@drawable/send_message_icon"
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"/>
    </LinearLayout>
</RelativeLayout>