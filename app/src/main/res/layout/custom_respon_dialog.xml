<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primary">
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/custom_respon_dialog_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:text="@string/custom_respon_dialog_message_text"
        android:textColor="@color/white" />
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/custom_respon_dialog_message"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@string/tolak"
            android:layout_marginEnd="10dp"
            android:id="@+id/custom_respon_dialog_button_tolak"
            android:layout_gravity="center_vertical"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/secondary_one"
            android:padding="5dp"
            android:id="@+id/custom_respon_dialog_button_terima">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/terima"
                android:textColor="@color/white"/>
        </RelativeLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>
</RelativeLayout>